<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Website ShopOnline</title>
    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Assets/client/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/client/css/font-awesome.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Assets/client/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Assets/client/style.css">
    <link rel="stylesheet" href="~/Assets/client/css/responsive.css">
</head>
<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <!--Top menu-->
                    @{Html.RenderAction("Topmenu", "Home");}
                    <!--End topmenu-->
                </div>
                <!--
                <div class="col-md-4">
                    <div class="header-right">
                        <ul class="list-unstyled list-inline">
                            <li class="dropdown dropdown-small">
                                <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" href="#"><span class="key">language :</span><span class="value">English </span><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">English</a></li>
                                    <li><a href="#">Japanese</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                    -->
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="/" rel="nofollow"><img src="~/Assets/client/img/logo.png"></a></h1>
                    </div>
                </div>
                <!--Countcart-->
                @{Html.RenderAction("CountCart", "Home");}
                <!--endcount-->
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                @{Html.RenderAction("MainMenu", "Home");}
            </div>
        </div>
    </div> <!-- End mainmenu area -->
     @RenderBody()

    <div class="footer-top-area">
       @{Html.RenderAction("Footer", "Home"); }
    </div> <!-- End footer top area -->

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; @DateTime.Now.Year ItechMaster. All Rights Reserved. </p>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="footer-card-icon">
                        <i class="fa fa-cc-discover"></i>
                        <i class="fa fa-cc-mastercard"></i>
                        <i class="fa fa-cc-paypal"></i>
                        <i class="fa fa-cc-visa"></i>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- Latest jQuery form server -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- Bootstrap JS form CDN -->
    <script src="~/Assets/client/js/bootstrap.min.js"></script>
    <!-- jQuery sticky menu -->
    <script src="~/Assets/client/js/owl.carousel.min.js"></script>
    <script src="~/Assets/client/js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Assets/client/js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Assets/client/js/main.js"></script>
    <!-- Slider -->
    @RenderSection("jsFooter", required: false)
    <script type="text/javascript" src="~/Assets/client/js/bxslider.min.js"></script>
    <script type="text/javascript" src="~/Assets/client/js/script.slider.js"></script>
</body>
</html>